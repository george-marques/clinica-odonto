<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="Clinica">
		<class>br.unitins.clinica.model.Cidade</class>
		<class>br.unitins.clinica.model.Clinica</class>
		<class>br.unitins.clinica.model.Consulta</class>
		<class>br.unitins.clinica.model.DefaultEntity</class>
		<class>br.unitins.clinica.model.Dentista</class>
		<class>br.unitins.clinica.model.Endereco</class>
		<class>br.unitins.clinica.model.EsqueceuSenha</class>
		<class>br.unitins.clinica.model.Estado</class>
		<class>br.unitins.clinica.model.ItemVenda</class>
		<class>br.unitins.clinica.model.Paciente</class>
		<class>br.unitins.clinica.model.Pessoa</class>
		<class>br.unitins.clinica.model.PessoaFisica</class>
		<class>br.unitins.clinica.model.PessoaJuridica</class>
		<class>br.unitins.clinica.model.Produto</class>
		<class>br.unitins.clinica.model.TipoAtendimento</class>
		<class>br.unitins.clinica.model.Usuario</class>
		<class>br.unitins.clinica.model.Venda</class>
		
		<properties>
			<!-- DB Driver -->
			<property name="javax.persistence.jdbc.driver"
				value="org.postgresql.Driver" />

			<!-- BD Name -->
			<property name="javax.persistence.jdbc.url"
				value="jdbc:postgresql://localhost:5432/clinicadb" />

			<!-- DB User -->
			<property name="javax.persistence.jdbc.user"
				value="topicos2" />

			<!-- DB Password -->
			<property name="javax.persistence.jdbc.password"
				value="123456" />

			<!-- DB Dialect -->
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.PostgreSQLDialect" />

			<!-- create / create-drop / update / none-->
			<property name="hibernate.hbm2ddl.auto" value="update" />

			<!-- Show SQL in console -->
			<property name="hibernate.show_sql" value="true" />

			<!-- Show SQL formatted -->
			<property name="hibernate.format_sql" value="true" />
		</properties>
		
	</persistence-unit>
</persistence>